@model IEnumerable<News>
@{
    ViewData["Title"] = "Arama Sonuçları";
}


<section id="portfolio" class="portfolio">
    <div class="container">

        <div class="row" data-aos="fade-up">
            <div class="col-lg-12 d-flex justify-content-center">
                <ul id="portfolio-flters">
                    <li data-filter="*" class="filter-active">ARAMA SONUÇLARI</li>
                </ul>
            </div>
        </div>

        <hr />
        <div class="row portfolio-container" data-aos="fade-up">



            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 portfolio-item filter-app">
                    
                        <img src="/img/@item.Image" class="img-fluid" alt="@item.Title">
                 
                    <div class="portfolio-info">
                        <h4>@item.Title
                        </h4>

                        <a href="/img/@item.Image" data-gallery="portfolioGallery" class="portfolio-lightbox preview-link" title="@item.Title"><i class="bx bx-plus"></i></a>
                        <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">DÜZENLE <i class="bi bi-pencil"></i></a> |
                        <a class="btn btn-warning btn-sm" asp-action="Details" asp-route-id="@item.Id">DETAY <i class="bi bi-ticket-detailed"></i></a> |
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Sil <i class="bi bi-trash"></i></a>
                    </div>
                </div>
            }
        </div>

    </div>
</section>

@section Scripts{
<script src="/News/vendor/aos/aos.js"></script>
<script src="/News/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="/News/vendor/glightbox/js/glightbox.min.js"></script>
<script src="/News/vendor/isotope-layout/isotope.pkgd.min.js"></script>
<script src="/News/vendor/swiper/swiper-bundle.min.js"></script>
<script src="/News/vendor/waypoints/noframework.waypoints.js"></script>
<script src="/News/vendor/php-email-form/validate.js"></script>

<!-- Template Main JS File -->
<script src="/News/js/main.js"></script>
}





