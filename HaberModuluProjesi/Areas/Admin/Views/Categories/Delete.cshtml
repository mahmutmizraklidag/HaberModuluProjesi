@model HaberModuluProjesi.Entities.Category

@{
    ViewData["Title"] = "Kategori Sil";
}

<h6>Kategori Sil</h6>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class="col-sm-10">
            @if (Model.IsActive)
            {
                <label class="btn btn-success btn-sm"><i class="bi bi-check-lg"></i></label>
            }
            else
            {
                <label class="btn btn-danger btn-sm"><i class="bi bi-x-lg"></i></label>
            }
        </dd>
    </dl>

    <form asp-action="Delete" class="mt-2">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="SİL" class="btn btn-danger" /> |
        <a class="btn btn-warning" asp-action="Index">KATEGORİ lİSTESİNE DÖN</a>
    </form>
</div>
